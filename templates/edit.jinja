{% extends "layout.jinja" %}
{% block content %}
<h1>
	Edit {{ article.title }}
</h1>
<nav>
	<a href="{{ url_for('view', title=article.title, noredirect=1 if article.has_redirect else None) }}">Cancel</a>
	<a href="#"
		hx-post="{{ url_for('edit_save', title=article.title, noredirect=1 if article.has_redirect else None) }}" 
		hx-include="#doki2-edit-textarea">
		Save
	</a>
</nav>
<hr>
<textarea
	name="raw_text"
	id="doki2-edit-textarea"
	autocomplete="off"
	autocorrect="off"
	autocapitalize="off"
	spellcheck="false"
	autofocus>
	{%- if article.raw_text -%}
		{{- article.raw_text|safe -}}
	{%- endif -%}
</textarea>
{% endblock content %}